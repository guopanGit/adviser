/* 项目详情/project.wxss */

.pageWrap {
    background-image: url("https://file.xiangmucanmou.com/image/bgtop.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-color: #fff;
}

.top {
    padding: 28rpx 28rpx 40rpx;
    border-bottom: 12rpx solid #eee;
    background-color: #fff;
}

.ad {
    width: 694rpx;
    height: 304rpx;
    border-radius: 24rpx;
    margin: 34rpx 28rpx 0 28rpx;
}

.titleWrap {
    display: flex;
    align-content: center;
    font-size: 24rpx;
}

.title {
    display: inline-block;
    font-size: 36rpx;
    font-weight: 500;
    color: #333;
}

.type {
    padding: 6rpx;
    margin: 0 20rpx 4rpx;
    border-radius: 8rpx;
    color: #fff;
    background: rgba(249, 108, 4, 0.70);
}

.num {
    padding: 6rpx;
    margin-bottom: 4rpx;
    border-radius: 8rpx;
    color: #fff;
    background-color: #FF7171;
}

.plan {
    margin-top: 18rpx;
    font-size: 24rpx;
    color: #666;
}

.brief {
    margin-top: 10rpx;
    line-height: 32rpx;
    font-size: 24rpx;
    color: #999;
}

.tally {
    display: flex;
    justify-content: space-between;
    width: 694rpx;
    height: 108rpx;
    padding: 10rpx 40rpx;
    position: relative;
    border-radius: 24rpx;
    margin-top: 12rpx;
    background-color: #EEF7FF;
}

.tallyItem {
    width: 128rpx;
}

.man, .name {
    text-align: center;
    font-size: 28rpx;
    line-height: 40rpx;
}

.left {
    display: inline-block;
}

.warn {
    width: 600rpx;
    margin: 710rpx auto 0;
    font-size: 28rpx;
    line-height: 40rpx;
    color: #fff;
}


.middle {
    padding: 20rpx 28rpx 4rpx 34rpx;
    background-color: #fff;
    border-bottom: 12rpx solid #eee;
}

.middleTitle {
    margin-bottom: 18rpx;
    font-size: 40rpx;
    font-weight: 600;
    color: #333;
}

.items {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.item {
    width: 328rpx;
    height: 160rpx;
    border-radius: 8rpx;
    margin-bottom: 22rpx;
    padding: 20rpx 24rpx;
}

.fenxi {
    background-image: url("https://file.xiangmucanmou.com/image/fenxi.png");
    background-size: 100% 100%;
}

.qushi {
    background-image: url("https://file.xiangmucanmou.com/image/qushi.png");
    background-size: 100% 100%;
}

.muoshi {
    background-image: url("https://file.xiangmucanmou.com/image/muoshi.png");
    background-size: 100% 100%;
}

.shili {
    background-image: url("https://file.xiangmucanmou.com/image/shili.png");
    background-size: 100% 100%;
}

.jieshao {
    background-image: url("https://file.xiangmucanmou.com/image/jieshao.png");
    background-size: 100% 100%;
}

.anli {
    background-image: url("https://file.xiangmucanmou.com/image/anli.png");
    background-size: 100% 100%;
}

.liucheng {
    background-image: url("https://file.xiangmucanmou.com/image/liucheng.png");
    background-size: 100% 100%;
}

.zhichi {
    background-image: url("https://file.xiangmucanmou.com/image/zhichi.png");
    background-size: 100% 100%;
}


.itemName {
    font-size: 28rpx;
    font-weight: 500;
    color: #fff;
}

.duration {
    margin: 10rpx 0;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.70);
}


.fulfil {
    width: 44rpx;
    height: 44rpx;
    vertical-align: middle;
}

.fulfilText {
    margin-left: 12rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #fff;
}

.progress {
    display: inline-block;
    width: 156rpx;
}

.bottom {
    padding: 24rpx 28rpx;
}

.ipx {
    padding-bottom: 80rpx;
}

.bottomTitle {
    margin-bottom: 24rpx;
    font-size: 40rpx;
    font-weight: 600;
    color: #333;
}

.videoImg{
    width: 694rpx;
    height: 272rpx;
    border-radius: 12rpx;
}

.flex{
    margin-top: 10rpx;
}

.name {
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
}

.count{
    font-size: 24rpx;
    color: #666;
}

.intro {
    font-size: 24rpx;
    color: #333;
}

.price {
    font-size: 28rpx;
    font-weight: 500;
    color: #f96d09;
}

.btn{
    width: 496rpx;
    height: 82rpx;
    display: flex;
}

.left,.right{
    width: 284rpx;
    height: 82rpx;
}

.left{
    border-radius: 20rpx 0 0 20rpx;
    background-color: #4171f7;
}

.right{
    background-color: #4eaf55;
    border-radius: 0 20rpx  20rpx 0;
}