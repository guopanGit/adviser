/** app.wxss **/

@import "css/icon.wxss";

view {
    box-sizing: border-box;
    line-height: 1;
}


/* flex*/

.flex {
    display: flex;
    align-content: center;
    justify-content: space-between;
}

/* 字体颜色 */

.c3d {
    color: #3D74F3;
}

.cf9 {
    color: #F96C04;
}

.c3 {
    color: #333;
}

.c6 {
    color: #666;
}

.c9{
    color: #999;
}

.c41{
    color: #4171F7;
}

/* canvas 样式 */
.container {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
} 